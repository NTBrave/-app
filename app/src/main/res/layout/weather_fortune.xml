<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_weather_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="1"
        android:text="今日"
        android:textColor="@color/cardview_light_background"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_weather_fortune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_weather_today"
        android:ems="1"
        android:text="宜忌"
        android:textColor="@color/cardview_light_background"
        android:textSize="40sp" />

    <TextView
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="16sp"
        android:layout_toRightOf="@id/tv_weather_fortune"
        android:gravity="center_vertical"
        android:id="@+id/tv_weather_suitable"/>

    <TextView
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_weather_suitable"
        android:layout_toRightOf="@id/tv_weather_fortune"
        android:id="@+id/tv_weather_avoid"/>

</RelativeLayout>
